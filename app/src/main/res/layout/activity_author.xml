<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.AuthorActivity"
        android:orientation="vertical"
        android:padding="@dimen/space_m">
    <TextView
            android:id="@+id/author_name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textSize="@dimen/font_l"
            android:layout_marginBottom="@dimen/space_m"
            android:text="Very Very Very Very Very"
    />
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="vertical">
        <Button
                android:id="@+id/author_back_button"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="@string/back"
                android:paddingLeft="@dimen/space_m"
                android:paddingRight="@dimen/space_m"
                android:textColor="@color/colorText"
                android:background="@color/colorPrimary"/>
    </LinearLayout>
</LinearLayout>